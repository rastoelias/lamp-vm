
{% for vhost in vhosts %}
  <VirtualHost *:80>
    
    ServerName {{ vhost.servername|e }}
    ServerAdmin webmaster@localhost
    DocumentRoot {{ vhost.documentroot|e }}

    <Directory {{ vhost.documentroot|e }}>
      Options Indexes FollowSymLinks MultiViews
      AllowOverride All
      Require all granted
    </Directory>

    ErrorLog ${APACHE_LOG_DIR}/error.log
    CustomLog ${APACHE_LOG_DIR}/access.log combined

  </VirtualHost>
{% endfor %}
